{
  "name": "vaultkey",
  "version": "1.0.2",
  "description": "Password manager crittografato su USB - Cross-platform",
  "author": "CosmoNetinfo",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CosmoNetinfo/VaultKey.git"
  },
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.vaultkey.app",
    "productName": "VaultKey",
    "executableName": "VaultKey",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CosmoNetinfo",
        "repo": "VaultKey"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
